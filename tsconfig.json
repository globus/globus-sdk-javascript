{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "ES2019",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "noEmit": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src"]
}
