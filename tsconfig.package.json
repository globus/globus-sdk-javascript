{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "module": "es2022",
    "lib": ["es2022", "dom"],
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "outDir": "dist/esm",
    "rootDir": "./src",
    "types": ["node"]
  },
  "files": [
    "./src/index.ts",
    "./src/constants.ts",
    "./src/services/globus-connect-server/client.ts",
    "./src/core/info/index.ts",
    "./src/core/authorization/index.ts"
  ],
  "include": ["./src/**/*.ts"],
  "exclude": [
    "node_modules",
    "tmp",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/__tests__/*",
    "**/__utils__/*",
    "**/__mocks__/*"
  ]
}
